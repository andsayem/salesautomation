<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_retail_sl"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:background="@drawable/curv_background"
               android:textColor="@color/colorPrimary"
                android:text="SL" />

            <TextView
                android:id="@+id/row_retail_code"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/colorPrimary"
                android:text="Retailer Code" />
            <TextView
                android:id="@+id/row_retail_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/colorPrimary"
                android:text="Retailer Name" />
            <TextView
                android:id="@+id/row_retail_route"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Route" />
            <TextView
                android:id="@+id/row_retail_division"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Division" />
            <TextView
                android:id="@+id/row_retail_territory"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Territory" />
            <TextView
                android:id="@+id/row_retail_point"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Point" />
            <TextView
                android:id="@+id/row_retail_status"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Status" />
            <TextView
                android:id="@+id/row_retail_process"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Process" />
            <TextView
                android:id="@+id/row_retail_process_status"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Process Status" />
            <TextView
                android:id="@+id/row_retail_action"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Action" />
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/retailer_list_a_i_recyclerView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />
        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/linlayhide"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/curv_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আপনার রিটেলার আপডেট হয়েছে। " />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/curv_button_login_hover"
            android:text="ঠিক আছে"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>
