<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_fromdate"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:background="@drawable/curv_background"
            android:textColor="#736b6b"
            android:text="From Date"
            android:padding="@dimen/margin_5dp"
            android:visibility="visible"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_todate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:background="@drawable/curv_background"
            android:padding="@dimen/margin_5dp"
            android:text="To date"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/txt_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:gravity="center"
            android:background="@drawable/newsec"
            android:padding="@dimen/margin_5dp"
            android:text="Search"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/row_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="Date"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_route"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="Route"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_retailername"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:visibility="visible"
                    android:text="Retailer"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_time"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="In-Time"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_retaileraddress"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="Out Time"
                    android:textColor="@color/deep_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/row_timeo"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="Out Time"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_retailernameo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="Total Hour"
                    android:textColor="@color/deep_gray"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/row_retaileraddresso"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="12212"
                    android:textColor="@color/deep_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/row_workinghour"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="12212"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/retailer_list_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>