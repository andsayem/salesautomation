<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/margin_10dp"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/blue_grey_100"
                    android:text="Back"/>
            <ImageView
                android:id="@+id/img_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/curv_background"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/ssg_logo" />

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/txt_browse"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Browse"
                   android:padding="@dimen/margin_10dp"
                   android:background="@drawable/curv_background"
                   android:textColor="@color/deep_gray"
                   android:textSize="20sp"/>

               <Button
                   android:id="@+id/btn_send"
                   android:layout_marginLeft="@dimen/margin_10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/curv_background"
                   android:text="Update"/>
           </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                     <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/curv_background"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Old Password"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/deep_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/fb_gray" />

                    <EditText
                        android:id="@+id/edit_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="New Password"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/deep_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/fb_gray" />

                    <EditText
                        android:id="@+id/edit_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Confirm New Password"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/deep_gray" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/curv_button_login_hover"
                    android:text="Change"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
