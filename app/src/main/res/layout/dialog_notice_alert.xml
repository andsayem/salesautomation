<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="Office Notice"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_dialog_cross"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/btn_dialog_cross"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cross_hover"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_5dp"
    android:text="Employee Satisfaction Survey -2024"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:layout_marginTop="30dp"
            android:text="সম্মানীত সহকর্মী,"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5dp"

            android:text="আপনাদের সুচিন্তিত মতামত ও মূল্যায়ন আমাদের কাছে অত্যন্ত গুরুত্বপূর্ণ, যার মাধ্যমে আমরা এসএসজিকে একটি সুন্দর কর্মীবান্ধব প্রতিষ্ঠান হিসেবে গড়ে তুলতে পারবো। আপনার মতামত নিচের লিংকের মাধ্যমে আগামী ৫ ফেব্রুয়ারি- ২০২৪ ইং তারিখের মধ্যে সম্পন্ন করার জন্য বিশেষভাবে অনুরোধ করা হলোঃ "
            />
        <TextView
            android:id="@+id/txt_notivelink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:text="@string/surveylink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:text="আপনার মতামত গোপন রাখার জন্য আমরা বদ্ধ পরিকর।" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:text="@string/notice_footer" />

    </LinearLayout>

</LinearLayout>
