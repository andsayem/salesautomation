<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical"
    android:paddingTop="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="New product entry form."/>

    <EditText
        android:id="@+id/edt_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:padding="@dimen/margin_5dp"

        android:background="@drawable/curv_background"
        android:hint="Product Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edt_mrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@drawable/curv_background"
            android:padding="@dimen/margin_5dp"
            android:inputType="number"
            android:layout_weight=".6"
            android:hint="MRP"/>
            <EditText
            android:id="@+id/edt_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:inputType="number"

                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/curv_background"
            android:layout_weight="1.4"
                android:padding="@dimen/margin_5dp"

                android:hint="Aprrox Monthly Sales Qty"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/margin_10dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:id="@+id/img_view"

android:layout_weight="2.7"
        android:background="@mipmap/ssg_logo"/>

        <TextView
            android:id="@+id/txt_browse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:padding="@dimen/margin_10dp"
            android:text="Browse"

            android:background="@drawable/curv_background"
            android:textColor="@color/deep_gray"
            android:textSize="20sp"/>
          </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_margin="@dimen/margin_10dp"
        android:text="Submit Data"
        android:background="@drawable/curv_button_hover"/>
</LinearLayout>
