<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5dp">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp">

            <Spinner
                android:id="@+id/spinnerYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorPrimary" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/curv_button_login_hover"
            card_view:cardCornerRadius="4dp">

            <Spinner
                android:id="@+id/spinnerMonth"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorPrimary" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:text="Search" />
    <TextView
        android:id="@+id/txt_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:visibility="gone"
        android:textStyle="bold"
        android:text=""/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/row_sl_no"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rectangle_background"
                    android:text="SL"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_pg_group"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rectangle_background"
                    android:text="PG Group"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_pg_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/margin_10dp"
                    android:background="@drawable/rectangle_background"
                    android:text="PG Name"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_order_no"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/margin_10dp"
                    android:background="@drawable/rectangle_background"
                    android:text="Trg Qty"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_imsqty"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/margin_10dp"
                    android:background="@drawable/rectangle_background"
                    android:text="IMS Qty"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_qty_percentage"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@drawable/rectangle_background"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:text="Qty %"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_ims_contrebution"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@drawable/rectangle_background"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:text="IMS Contr."
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_collection_qty"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rectangle_background"
                    android:text="Coll. Qty"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_pcs_achiv_percent"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rectangle_background"
                    android:text="PG Achv %"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_group_achiv_percent"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rectangle_background"
                    android:text="PG Group %"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_pg_incentive"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rectangle_background"
                    android:text="PG Incentive"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_group_incentive"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/margin_10dp"
                    android:background="@drawable/rectangle_background"
                    android:text="Group Incentive"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_total_amount"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/margin_10dp"
                    android:background="@drawable/rectangle_background"
                    android:text="Total Incentive"
                    android:textColor="@color/deep_gray" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/retailer_list_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="right|center"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:background="#4CAF50"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text=""/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:text="Total"
                        />
                    <TextView
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/total_value"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text=""/>
                    <TextView
                        android:id="@+id/total_qty_d"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:text="Total"/>

                    <TextView
                        android:id="@+id/txt_pg_incentive"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/rectangle_background"

                        android:textColor="#ffffff"
                        android:text=""/>

                    <TextView
                        android:id="@+id/txt_group_incentive"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/rectangle_background"

                        android:textColor="#ffffff"
                        android:text=""/>

                    <TextView
                        android:id="@+id/txt_total_incentive"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:background="@drawable/rectangle_background"

                        android:text=""/>
                </LinearLayout></RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
