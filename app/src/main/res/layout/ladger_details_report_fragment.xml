<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:gravity="center"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_fromdate"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:background="@drawable/curv_background"
            android:textColor="#736b6b"
            android:text="From Date"
            android:padding="@dimen/margin_5dp"
            android:visibility="visible"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_todate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:background="@drawable/curv_background"
            android:padding="@dimen/margin_5dp"
            android:text="To date"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_route_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:gravity="center"
            android:background="@drawable/newsec"
            android:padding="@dimen/margin_5dp"
            android:text="Route"
            android:textStyle="bold" />  <TextView
            android:id="@+id/txt_retailer_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:gravity="center"
            android:background="@drawable/newsec"
            android:padding="@dimen/margin_5dp"
            android:text="Retailer"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:gravity="center"
            android:background="@drawable/newsec"
            android:padding="@dimen/margin_5dp"
            android:text="Search"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>