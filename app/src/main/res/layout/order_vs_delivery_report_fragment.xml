<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5dp">

        <TextView
            android:id="@+id/txt_fromdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:padding="5px"
            android:text="From date"
            android:textColor="#736b6b"

            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_todate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:padding="5px"
            android:text="To date"
            android:textColor="#736b6b"

            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_route"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:gravity="center"
            android:padding="5px"
            android:text="Route"
            android:textColor="#736b6b"

            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:gravity="center"
            android:padding="5px"
            android:text="Search"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:textStyle="bold"
        android:text=""/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/row_sl_no"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:background="@drawable/rectangle_background"
                        android:text="SL"
                        android:textColor="@color/deep_gray" />
                    <TextView
                        android:id="@+id/row_order_no"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:background="@drawable/rectangle_background"
                        android:text="Order"
                        android:textColor="#338dcd" />

                    <TextView
                        android:id="@+id/row_order_date_time"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:background="@drawable/rectangle_background"
                        android:text="Date"
                        android:textColor="@color/deep_gray" />
                    <TextView
                        android:id="@+id/row_txt_customer"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="@drawable/rectangle_background"
                        android:padding="@dimen/margin_10dp"
                        android:text="Retailer"
                        android:textColor="@color/deep_gray" />
                    <TextView
                        android:id="@+id/row_order_qty"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="@drawable/rectangle_background"
                        android:padding="@dimen/margin_10dp"
                        android:text="Order Qty"
                        android:textColor="@color/deep_gray" />
                    <TextView
                        android:id="@+id/row_orver_value"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:background="@drawable/rectangle_background"
                        android:text="Order Value"
                        android:textColor="@color/deep_gray" />
                    <TextView
                        android:id="@+id/row_orver_delivery_qty"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:background="@drawable/rectangle_background"
                        android:text="D.Qty"
                        android:textColor="@color/deep_gray" />
                    <TextView
                        android:id="@+id/row_orver_delivery_value"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:background="@drawable/rectangle_background"
                        android:text="D.Value"
                        android:textColor="@color/deep_gray" />

                    <TextView
                        android:id="@+id/row_orver_free"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:background="@drawable/rectangle_background"
                        android:text="Free"
                        android:textColor="@color/deep_gray" />

                    <TextView
                        android:id="@+id/row_orver_Discount"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:text="Discount"
                        android:background="@drawable/rectangle_background"
                        android:textColor="@color/deep_gray" />

                </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/retailer_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="right|center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Total :"/>

                    <TextView
                        android:id="@+id/total_qty"
                        android:layout_width="50dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:text="0000"/>

                    <TextView
                        android:id="@+id/total_value"
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="0000"/>
                    <TextView
                        android:id="@+id/total_qty_d"
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:text="0000"/>

                    <TextView
                        android:id="@+id/total_value_d"
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="0000"/>

                    <TextView
                        android:id="@+id/total_qty_free"
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"

                        android:text=""/>

                    <TextView
                        android:id="@+id/total_value_discount"
                        android:layout_width="100dp"                    android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text=""/>
                </LinearLayout></RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>