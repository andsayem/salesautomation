<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_retail_sl"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:background="@drawable/curv_background"
                android:text="SL" />

            <TextView
                android:id="@+id/row_retail_code"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Retailer Code" />
            <TextView
                android:id="@+id/row_retail_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"

                android:text="Retailer Name" />
            <TextView
                android:id="@+id/row_retail_route"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Route" />
            <TextView
                android:id="@+id/row_retail_division"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Division" />
            <TextView
                android:id="@+id/row_retail_territory"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Territory" />
            <TextView
                android:id="@+id/row_retail_point"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Point" />
            <TextView
                android:id="@+id/row_retail_status"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="Status" />
            <TextView
                android:id="@+id/row_retail_process"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="-" />
            <TextView
                android:id="@+id/row_retail_process_status"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:text="-" />
            <TextView
                android:id="@+id/row_retail_action"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/curv_background"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:text="-" />
        </LinearLayout>
    </HorizontalScrollView>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2px"-->
<!--        android:layout_marginTop="3px"-->
<!--        android:background="@color/deep_gray"-->
<!--        />-->

</LinearLayout>
