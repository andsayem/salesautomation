<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/row_smart_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@mipmap/smart_order"
            android:contentDescription="@string/image_description"
            android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_retailer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Retailer Name" />
        <TextView
            android:id="@+id/row_retailer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:gravity="center"
            android:drawableEnd="@mipmap/call"
            android:drawablePadding="4dp"
            android:text="Phone: 01100000000" />
        <TextView
            android:id="@+id/row_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Route Name" />
        <TextView
            android:id="@+id/row_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:text="Order Text" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/row_image_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@mipmap/sound"/>

    <TextView
        android:id="@+id/row_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:textColor="@color/color_blue"

        android:text="" />
</LinearLayout>

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/row_btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:text=" অর্ডার এন্ট্রি ">

    </Button>
</RelativeLayout>