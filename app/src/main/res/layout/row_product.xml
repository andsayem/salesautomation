<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_10dp"
        android:layout_margin="@dimen/margin_5dp">

        <TextView
            android:id="@+id/row_sl_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/row_product_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:text="Product Name dfsddsfsddsfsddsfsdfs sdh dhdsfj f f hfdshfj dfhsdfjd hdhdfjyfjhdfhjd fhdf  hdsjf f fhjd(fsdhsdjjhdfhj887878787)sdjfjhsjdhfjhdsfhdsfjhjh " />

        <Button
            android:id="@+id/row_product_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:textSize="10sp"
            android:background="@drawable/curv_background"
            android:layout_weight=".6"
            android:text="Select" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
