<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linlay_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_5dp"
            card_view:cardCornerRadius="0dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TableRow android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px">
                <TextView
                    android:id="@+id/row_retailer_sl"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="SL"
                    android:textColor="@color/deep_gray" />
                </TableRow></TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TableRow android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px">
                <TextView
                    android:id="@+id/row_retailer_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text=""
                    android:textColor="@color/deep_gray" />
                </TableRow>
                </TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TableRow android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px">

                    <TextView
                        android:id="@+id/row_opening_balance"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="@dimen/margin_10dp"
                        android:text="67867"

                        android:textColor="@color/deep_gray" />
                </TableRow>
                </TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TableRow android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px">
                <TextView
                    android:id="@+id/row_salse"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="1100000"
                    android:textColor="@color/deep_gray" />
                </TableRow>
                </TableLayout>

                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableRow android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1px">
                        <TextView
                            android:id="@+id/row_return_sales"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/margin_10dp"
                            android:text="Return Sales"
                            android:textColor="@color/deep_gray" />
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableRow android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1px">
                        <TextView
                            android:id="@+id/row_open_offer"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/margin_10dp"
                            android:text="Open Offer"

                            android:textColor="@color/deep_gray" />
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TableRow android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px">
                <TextView
                    android:id="@+id/row_collection"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="77878"

                    android:textColor="@color/deep_gray" />

                </TableRow>
                </TableLayout>

                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableRow android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1px">
                        <TextView
                            android:id="@+id/row_monthly_commn"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/margin_10dp"
                            android:text="Monthly Comm."
                            android:textColor="@color/deep_gray" />
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableRow android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1px">
                        <TextView
                            android:id="@+id/row_value_comm"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/margin_10dp"
                            android:text="Value Comm."

                            android:textColor="@color/deep_gray" />
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableRow android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1px">
                        <TextView
                            android:id="@+id/row_memo_comm"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/margin_10dp"
                            android:text="Memo Comm."
                            android:textColor="@color/deep_gray" />
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:background="@color/deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TableRow android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px">
                <TextView
                    android:id="@+id/row_balance"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="77787"
                    android:textColor="@color/deep_gray" />
                </TableRow></TableLayout>
            </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
