    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_lay_product_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:layout_below="@+id/btn_add_product_cross"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/row_route_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

            <TextView
                android:id="@+id/row_retailer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text=""/>

            <TextView
                android:id="@+id/row_txt_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:text="Edit"/>

            <TextView
                android:id="@+id/row_txt_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:text="Confirm"
                android:layout_weight=".7" />

            <TextView
                android:id="@+id/row_txt_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/margin_5dp"
                android:textColor="@color/colorPrimary"
                android:text="Delete"
                android:layout_weight=".7" />



        </LinearLayout>
    </LinearLayout>
