<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--    <HorizontalScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10dp"
                card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shirtmeasurement"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_margin="@dimen/margin_5dp"      android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <EditText
            android:id="@+id/edt_collar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:hint="Collar (Inch):"
            android:imeOptions="actionNext"
            android:layout_marginRight="2dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/deep_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
            android:id="@+id/edt_chest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:background="@drawable/curv_background"
            android:hint="Chest (Inch):"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/deep_gray" />

    </LinearLayout>
    </LinearLayout>
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <EditText
            android:id="@+id/edt_waist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:hint="Waist (Inch):"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:layout_marginRight="2dp"
            android:maxLines="1"
            android:padding="10dp"

            android:singleLine="true"
            android:text=""
            android:textColor="@color/deep_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
            android:id="@+id/edt_shoulder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:hint="Shoulder (Inch):"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/deep_gray" />

    </LinearLayout>
    </LinearLayout>
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <EditText
            android:id="@+id/edt_sleeve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:hint="Sleeve (Inch):"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:layout_marginRight="2dp"
            android:maxLines="1"
            android:padding="10dp"

            android:singleLine="true"
            android:text=""
            android:textColor="@color/deep_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
            android:id="@+id/edt_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:hint="Length (Inch):"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/deep_gray" />

    </LinearLayout>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <EditText
            android:id="@+id/edt_cuff_hole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:hint="Cuff hole (Inch):"
            android:imeOptions="actionNext"
            android:layout_marginRight="2dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="10dp"

            android:singleLine="true"
            android:text=""
            android:textColor="@color/deep_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
            android:id="@+id/edt_armhole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/curv_background"
            android:hint="Arm hole (Inch):"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:layout_marginLeft="2dp"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@color/deep_gray" />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>


        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_10dp"
        android:background="@drawable/curv_button_hover"
        android:text="Add Feedback"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:textColor="#fff"
        android:visibility="visible"/>


    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/margin_10dp"
        android:src="@mipmap/tshirt"/>
</RelativeLayout>
