<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_fromdate"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:background="@drawable/curv_background"
            android:textColor="#736b6b"
            android:text="From Date"
            android:padding="@dimen/margin_5dp"
            android:visibility="visible"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_todate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:background="@drawable/curv_background"
            android:padding="@dimen/margin_5dp"
            android:text="To date"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_route"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:gravity="center"
            android:background="@drawable/newsec"
            android:padding="@dimen/margin_5dp"
            android:text="Route"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="#736b6b"
            android:visibility="visible"
            android:gravity="center"
            android:background="@drawable/newsec"
            android:padding="@dimen/margin_5dp"
            android:text="Search"
            android:textStyle="bold" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/row_sl_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:text="SL"
                    android:textStyle="bold|italic"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_wastage_no"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="WASTAGE NO"
                    android:textStyle="bold|italic"
                    android:textColor="@color/deep_gray" />

                <TextView
                    android:id="@+id/row_wastage_date_"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="DATE"
                    android:textStyle="bold|italic"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_txt_customer"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="CUSTOMER"
                    android:textStyle="bold|italic"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_wastage_qty"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="WASTAGE QTY"
                    android:textStyle="bold|italic"
                    android:textColor="@color/deep_gray" />
                <TextView
                    android:id="@+id/row_wastage_value"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="VALU"
                    android:textStyle="bold|italic"
                    android:textColor="@color/deep_gray" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orde_list_recyclerView"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>